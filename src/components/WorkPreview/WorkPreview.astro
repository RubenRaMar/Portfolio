---
import type { CollectionEntry } from "astro:content";

interface Props {
  works: CollectionEntry<"work">;
}

const {
  data: { headerTitle, headerImage, dataAos },
  slug,
} = Astro.props.works;
---

<a
  class="work"
  href={`/work/${slug}`}
  data-aos={dataAos}
  data-aos-easing="linear"
  data-aos-duration="600"
  data-aos-anchor-placement="center-bottom"
>
  <span class="work__title">{headerTitle}</span>
  <img
    class="work__image"
    src={headerImage.src}
    alt={headerImage.alt}
    width="500"
    height="385"
  />
</a>
