---
import type { IconPathsProps } from "@utils/icons/types";
import Icon from "../Icon/Icon.astro";

type Props = {
  href: string;
  size?: string;
  text?: string;
  icon?: keyof IconPathsProps;
};

const { href, icon, size, text } = Astro.props;
---

<div data-aos="zoom-in-up" data-aos-anchor-placement="top-bottom">
  <a class="call-to-action" href={href}>
    {text}
    {icon && <Icon icon={icon} size={size} />}
  </a>
</div>
